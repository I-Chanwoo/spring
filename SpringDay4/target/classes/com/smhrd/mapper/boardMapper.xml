<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.smhrd.mapper.boardMapper">

	<!-- 조회순 / 내림차순 -->
	<select id="sortByCountDesc" resultType="com.smhrd.entity.Board">
		SELECT * FROM BOARD ORDER BY COUNT DESC
	</select>
	
	<!-- 조회순 / 오름차순-->
	<select id="sortByCountAsc" resultType="com.smhrd.entity.Board">
		SELECT * FROM BOARD ORDER BY COUNT ASC
	</select>
</mapper>